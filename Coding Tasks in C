6th program; 

void main() {
   
   int m, p, c, total, totalmp; 
  
  printf("Enter the marks as: Math, Physics, Chemstery");
  scanf("%i %i %i", &m, &p, &c);

  if(m >= 65)
  printf("The candidate is eligible for the admission"); 
   else if (p >= 55)
   printf("The candidate is eligible for the admission"); 
   else if (c >= 50) 
    printf("The candidate is eligible for the admission"); 
    else if (m + p + c >= 180) 
    printf("The candidate is eligible for the admission"); 
    else if (m + p >= 140)
    printf("The candidate is eligible for the admission");
    else 
      printf("the candidate is not eligible for the admisson"); 
}

