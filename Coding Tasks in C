8th program; 

void main (){ 

  int a=0, a2=0, a3=0;

  printf("Enter the Angles of the triangle"); 
  scanf("%i %i %i", &a , &a2, &a3); 
  if (a == a2 == a3) 
      printf("The triangle is Equilateral"); 
  else if (a == a2)
      printf("The triangle is Isosceles"); 
  else 
      printf("Triangle is scalene");   

}

