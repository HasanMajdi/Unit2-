2nd program; 

void main(){
   
  //1. define variables 
  int input=0; 
  //2. get input from user
  printf("enter a number"); 
  scanf("%i", &input); 
  //3. check if it is positive or not 
  if (input > 0 ){ 
     printf("%i is positive", input);
  } 
     else {
     printf("%i is negative", input); 
  }
}

