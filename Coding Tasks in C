5th program; 

void main(){ 

int x, y;

printf("Enter X and Y values"); 
scanf("%i %i", &x, &y); 

if (x > 0 && y > 0)
        printf("point (%i, %i) lies in the First quandrant", x, y);
    else if (x < 0 && y > 0)
        printf("point (%i, %i) lies in the Second quandrant", x, y);
    else if (x < 0 && y < 0)
        printf("point (%i, %i) lies in the Third quandrant", x, y);
    else if (x > 0 && y < 0)
        printf("point (%i, %i) lies in the Fourth quandrant" , x, y);
    else if (x == 0 && y == 0)
        printf("point (%i, %i) lies at the origin", x, y);
}

