4th program;

void main (){ 
  int input=0, input2=0, input3=0;  

  printf("Enter three numbers"); 
  scanf("%i %i %i", &input ,&input2, &input3);

  if (input >= input2 && input >= input3) 
        printf("%i is the largest number.", input); 
  
    else if (input2 >= input && input2 >= input3) 
        printf("%i is the largest number.", input2); 
  
    else
        printf("%i is the largest number.", input3);
               
}

