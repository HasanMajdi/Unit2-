1st program; 

void main(){ 
  //1. define variables
  int input=0; 
  int residul=0;
  //2. get input from user
  printf("enter number"); 
  scanf("%i", &input); 
  //3. calculate residual div 2
  if  (input%2 == 0) {
        printf("%d is an even integer.",input);
    }
    else {
        printf("%d is an odd integer.",input);
    } 
} 

