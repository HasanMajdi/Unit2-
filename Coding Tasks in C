9th program; 

void main(){

int a=0, b=0, c=0; 
printf("Enter the angles of the triangle"); 
scanf("%i %i %i", &a , &b, &c); 

if (a + b + c == 180)
printf("Triangle is formed"); 
else 
    printf("The triangle is not valid");

}

